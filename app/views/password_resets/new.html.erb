<div>
  <h1 class="font-bold text-4xl">Reset Your Password</h1>

  <%= form_with(model: @user, url:  password_reset_path, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "Reset Password", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>
