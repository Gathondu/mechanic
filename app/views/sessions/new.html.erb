<div>
  <h1 class="font-bold text-4xl"><%= params[:type]%> log in</h1>

  <%= form_with(model: @user, url:  params[:type].downcase == 'admin'? admin_login_path : customer_login_path, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :email %>
      <%= form.email_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :password %>
      <%= form.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit "Log In", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to 'Forgot your password?', new_password_reset_path %>
</div>
